{
 ?CITY k:inRegion ?AREA.

 ?N is str:concatenation of (
  [ is map:cityName of ?CITY ]
  "%2C"
  [ is map:countryName of ?AREA ]
 ).
}
  log:implies { ?CITY :formVal ?N }.

